{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "outDir": "./dist/",
        "sourceRoot": "/src",
        "traceResolution": false,
        "baseUrl": "src",
        "jsx":"react"
    },
    "exclude":[
        "node_modules"
    ],
    "include":[
    	"src/**.ts",
        "src/**.tsx",
    	"typings/*.d.ts"      
    ]
}